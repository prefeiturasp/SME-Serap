@*Alertas*@
<alert></alert>
<div class="wellCustom" ng-controller="EvaluationMatrixListController">
    <div class="headerCustom">
        <h4>Matriz de avaliação<span>Listagem</span></h4>
    </div>
    <div class="well well-large">
        <div class="container-fluid">
            <form class="row-fluid">
                <div class="col-md-8 form-inline-page">
                    <input type="text" class="form-pesquisa" placeholder="Nome da matriz de avaliação" ng-model="pesquisa">
                    <input type="text" class="form-pesquisa" style="width: 280px;" placeholder="Edição da matriz de avaliação" ng-model="pesquisaEdition">
                    <button class="btn-pesquisar" ng-click="copySearch()" title="Pesquisar"><i class="material-icons">search</i></button>
                </div>
                <div class="col-md-4">
                    <a href="~/EvaluationMatrix/IndexForm" class="btnPadrao pull-right"> Nova matriz de avaliação</a>
                </div>
            </form>
        </div>
        <br />
        <table class="table data-table table-hover " ng-show="evaluationMatrixList != null">
            <colgroup>
                <col width="22%">
                <col width="22%">
                <col width="22%">
                <col width="22%">
                <col width="5%">
                <col width="5%">
            </colgroup>
            <thead class="noselect">
                <tr>
                    <th>Nome</th>
                    <th>Componente Curricular</th>
                    <th>Edição da Matriz</th>
                    <th>Situação</th>
                    <th class="center">Editar</th>
                    <th class="center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="pesquisado in evaluationMatrixList">
                    <td>{{pesquisado.Description}}</td>
                    <td>{{pesquisado.DisciplineDescription}}</td>
                    <td>{{pesquisado.Edition}}</td>
                    <td>{{pesquisado.State}}</td>
                    <td class="center"><a href="~/EvaluationMatrix/IndexForm?Id={{pesquisado.Id}}"><i class="material-icons">edite</i></a></td>
                    <td class="center"><a ng-click="confirmar(pesquisado)"><i class="material-icons">delete</i></a></td>
                </tr>
            </tbody>
        </table>
        <page method="load()" total-pages="{{pages}}" total-itens="{{totalItens}}" page-size="pageSize" data-arr-page-size="[10,20,30,40,50,100]"></page>
        <p class="nresultados" ng-show="evaluationMatrixList == null">Nenhum resultado encontrado.</p>
    </div>
    @*Modal*@
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{{evaluationMatrix.Description}}</h4>
                </div>
                <div class="modal-body">
                    <span>Os registros vinculados a esta Matriz, também serão excluídos.<br /> Tem certeza que deseja excluir?</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnPadrao" ng-click="delete(evaluationMatrix)">Excluir</button>
                    <button type="button" class="btnCancelar2" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>