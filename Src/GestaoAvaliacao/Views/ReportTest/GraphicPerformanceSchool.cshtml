
@{
    ViewBag.Title = "Gráficos de desempenho por escola";
}
<alert></alert>
<div class="wellCustom" ng-controller="GraphicPerformanceSchoolController">
    @* Estilo para controle filtro lateral *@
    <style>
        .side-filters {
            right: -342px;
            display: block !important;
            box-shadow: -4px -1px 2px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            -webkit-transition: all .5s ease;
            -moz-transition: all .5s ease;
            -ms-transition: all .5s ease;
            -o-transition: all .5s ease;
            transition: all .5s ease;
        }

        .side-filters-animation {
            right: 0;
            -webkit-transition: all .5s ease;
            -moz-transition: all .5s ease;
            -ms-transition: all .5s ease;
            -o-transition: all .5s ease;
            transition: all .5s ease;
        }
    </style>
    <div class="headerCustom">
        <h4>Relatório<span>Desempenho de prova por escola</span></h4>
    </div>
    @* Informações *@
    <div class="resumoAdesao">
        <div class="maxWidth">
            <div class="dadosGerais">
                <h2><strong>Relatório</strong></h2>
            </div>
        </div>
    </div>
    @* Gatilho Filtros *@
    <div class="pesquisa-upload row">
        <div class="col-md-8"></div>
        <div class="filtrar-lista col-md-4" data-side-filters>
            <a href="javascript:void(0)" data-ng-click="open();" data-side-filters>
                <i class="material-icons" data-side-filters>filter_list</i>
                <label data-side-filters>Filtrar Prova</label>
            </a>
        </div>
    </div>
    @* Painel Filtros *@
    <div class="panel-search side-filters" data-side-filters>
        <a href="javascript:void(0)" data-ng-click="open();" class="filtro-menu">
            <i class="material-icons">filter_list</i>
            <label class="filtroP">Filtrar provas</label>
            <i class="material-icons fecha">arrow_forward</i>
        </a>
        @* Directiva Filtros *@
        <report-filters filters="filters" global="global"></report-filters>
        <div class="col-seach" data-side-filters>
            <div style="display: inline-block; width: 100%;">
                <button class="btnCancelar pull-right" data-ng-click="clearFields()" data-side-filters><span>Limpar</span> </button>
                <button type="button" class="btnCancelar pull-right" ng-click="search()" data-side-filters>Pesquisar</button>
            </div>
        </div>
    </div>
    @* Pesquisa *@
    <div class="well well-large">
        <div class="row">
            <div class="col-sm-4" data-ng-repeat="($indexChart, chart) in charts track by $indexChart">
                <div style="margin: 10px 10px 10px 10px;">
                    <highchart class="chart" config="chart"></highchart>
                </div>
            </div>
        </div>
        <page method="search('paginate')" total-pages="{{pages}}" total-itens="{{totalItens}}" page-size="10" ng-show="charts.length>0" data-arr-page-size="[5,10,20]"></page>
        <p class="nresultados" ng-show="charts.length == 0" class="nresultados">Nenhum resultado encontrado.</p>
    </div>
</div>