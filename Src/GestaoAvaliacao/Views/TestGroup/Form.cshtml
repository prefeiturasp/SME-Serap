<alert></alert>
<section class="wellCustom" data-ng-controller="FormTestGroupController">
    @*Header*@
    <div class="headerCustom">
        <h4>Grupo de prova <span>Crie um novo grupo de prova</span></h4>
    </div>

    @*Corpo *@
    <div class="well well-large itens">

        <!--Input modal-->
        <div class="boxConteudo">
            <div class="row">
                <div class="col-md-6">
                    <div class="cards">
                        <div class="campoLabel">
                            <label>Nome*:</label>
                            <div>
                                <input class="form-control" ng-model="descriptionField" type="text" ng-change="validadeNomeGrupo()" placeholder="Digite aqui o nome do grupo de prova">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cards">
                        <div class="campoLabel">
                            <label>Situação*:</label>
                            <div radio-select radiolist="situacaoOptions" radioselected="situacaoModal" custom-class="radio-inline"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="cards" style="padding:0;">
                        <h4 style="padding: 15px;">Subgrupos *</h4>
                        <!--Lista-->
                        <table class="table table-responsive" style="margin:0;">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Adicionar</th>
                                    <th>Editar</th>
                                    <th>Excluir</th>
                                </tr>
                            </thead>
                            @*Lista gerada*@
                            <tbody>
                                <tr ng-repeat="lm in listaModal track by $index">                                   
                                    <td>
                                        <div>
                                            <input ng-class="'noselect '+lm.class"
                                                   ng-disabled="lm.lock"
                                                   ng-model="lm.Description"
                                                   ng-change="validarNomeModal(lm)"
                                                   placeholder="Digite aqui o nome do subgrupo">
                                        </div>
                                    </td>

                                    <td>
                                        <a role="button"
                                           ng-show="last($index)"
                                           ng-click="addModal()">
                                            <i class="material-icons">add</i>
                                        </a>
                                    </td>

                                    <td>
                                        <a ng-click="altModal($index)">
                                            <i class="material-icons">{{ lm.lock ? 'edit' : 'check' }}</i>
                                        </a>
                                    </td>

                                    <td>
                                        <a ng-show="!lm.lock"
                                           ng-click="callModal($index)">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Botões*@
    <div class="well well-large itens">
        <a class="btnCancelar pull-right" href="/TestGroup/List">Cancelar</a>
        <a class="btnPadrao2 pull-right" ng-click="save()">Salvar</a>
    </div>

    @*Modal*@
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{{ listaModal[itemDeletado].Description }}</h4>
                </div>

                <div class="modal-body">
                    <span>Você tem certeza que deseja excluir o subgrupo <b>{{listaModal[itemDeletado].Description}}</b> ? </span>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btnPadrao" ng-click="delModal()">Excluir</button>
                    <button type="button" class="btnCancelar2" data-dismiss="modal">Fechar</button>
                </div>

            </div>
        </div>
    </div>
    @*fim modal*@

</section>