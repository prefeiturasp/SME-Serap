@* Alertas *@
<alert></alert>
<div class="wellCustom" data-ng-controller="ListDisciplineController">
    <div class="headerCustom">
        <h4>Componente curricular <span>Listagem</span></h4>
    </div>
    <div class="well well-large">
        <form class="form-inline" role="form">
            <div class="form-group">
                <input type="text" class="form-pesquisa" placeholder="Componente curricular" ng-model="pesquisa">
            </div>
            <button class="btn-pesquisar" ng-click="copySearch()" title="Pesquisar"><i class="material-icons">search</i></button>
            <a href="~/Discipline/Form" class="btnPadrao pull-right"> Adicionar componente curricular</a>
        </form>
        <br />
        <table class="table table-hover" ng-show="disciplineList != null">
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Nível de ensino</th>
                    <th class="center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="pesquisado in disciplineList">
                    <td>{{pesquisado.Description}}</td>
                    <td>{{pesquisado.LevelEducationDescription}}</td>
                    <td class="center"><a ng-click="confirmar(pesquisado)"><i class="material-icons">delete</i></a></td>
                </tr>
            </tbody>
        </table>
        <page method="load()" total-pages="{{pages}}" total-itens="{{totalItens}}" page-size="pageSize" data-arr-page-size="[10,20,30,40,50,100]"></page>
        <p class="nresultados" ng-hide="disciplineList != null || !(message)">Nenhum resultado encontrado.</p>
    </div>
    @* Modal *@
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{{discipline.Description}}</h4>
                </div>
                <div class="modal-body">
                    <span>Você tem certeza que deseja excluir o componente curricular <b>{{discipline.Description}}</b>?</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnPadrao" ng-click="delete(discipline)">Excluir</button>
                    <button type="button" class="btnCancelar2" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>