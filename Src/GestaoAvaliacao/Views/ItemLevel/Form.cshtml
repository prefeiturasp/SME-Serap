
@* Alertas *@
<alert></alert>
<div class="wellCustom" data-ng-controller="FormItemLevelController">
    <div class="headerCustom">
        <h4>Nível de dificuldade do item <span>Crie um novo nível de dificuldade do item </span></h4>
    </div>
    <div class="well well-large">
        <form role="form">
            <div class="boxConteudo">
                <div class="form-group">
                    <div class="campoLabel">
                        <label for="itemLevel.Description">Descrição*:</label>
                        <div>
                            <input type="text" id="description" class="form-control" maxlength="100" placeholder="Digite aqui a descrição" ng-model="description">
                        </div>
                    </div>
                    <div class="campoLabel">
                        <label for="itemLevel.Value">Valor*:</label>
                        <div>
                            <input type="text" id="value" class="form-control number" maxlength="3" placeholder="Digite aqui o valor" ng-model="valor">
                        </div>
                    </div>
                </div>
            </div>                       
        </form>
    </div>
    <div class="well well-large itens">
        <a class="btnCancelar pull-right" href="~/ItemLevel/List">Cancelar</a>
        <button class="btnPadrao2 pull-right" ng-click="salvar()">Salvar</button>
    </div>
</div>