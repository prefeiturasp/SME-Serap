@* Alertas *@
<alert></alert>
<div class="wellCustom" data-ng-controller="ListItemLevelController">
    <div class="headerCustom">
        <h4>Nível de dificuldade do item <span>Listagem</span></h4>
    </div>
    <div class="well well-large">
        <form class="form-inline" role="form">
            <div class="form-group">
                <input type="text" class="form-pesquisa" placeholder="Nível de dificuldade do item" ng-model="pesquisa">
            </div>
            <button class="btn-pesquisar" ng-click="copySearch()" title="Pesquisar"><i class="material-icons">search</i></button>
            <a href="~/ItemLevel/Form" class="btnPadrao pull-right"> Novo nível de dificuldade do item</a>
        </form>
        <br />
        <table class="table table-hover" ng-show="itemLevelList != null">
            <colgroup>
                <col width="20%">
                <col width="70%">
                <col width="5%">
                <col width="5%">
            </colgroup>
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Valor</th>
                    <th class="center">Editar</th>
                    <th class="center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="pesquisado in itemLevelList">
                    <td>{{pesquisado.Description}}</td>
                    <td>{{pesquisado.Value}}</td>
                    <td class="center"><a href="~/ItemLevel/Form?Id={{pesquisado.Id}}"><i class="material-icons">create</i></a></td>
                    <td class="center"><a ng-click="confirmar(pesquisado)"><i class="material-icons">delete</i></a></td>
                </tr>
            </tbody>
        </table>
        <page method="load()" total-pages="{{pages}}" total-itens="{{totalItens}}" page-size="pageSize" data-arr-page-size="[10,20,30,40,50,100]"></page>
        <p class="nresultados" ng-hide="itemLevelList != null || !(message)">Nenhum resultado encontrado.</p>
    </div>
    @* Modal *@
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{{itemLevel.Description}}</h4>
                </div>
                <div class="modal-body">
                    <span>Você tem certeza que deseja excluir o nível de dificuldade do item <b>{{itemLevel.Description}}</b>?</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnPadrao" ng-click="delete(itemLevel)">Excluir</button>
                    <button type="button" class="btnCancelar2" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>