@* Alertas *@
<alert></alert>
<div class="wellCustom" data-ng-controller="ListKnowledgeAreaController">
    <div class="headerCustom">
        <h4>Área de conhecimento <span>Listagem</span></h4>
    </div>
    <div class="well well-large">
        <form class="form-inline" role="form">
            <div class="form-group">
                <input type="text" class="form-pesquisa" placeholder="Área de conhecimento" ng-model="pesquisa">
            </div>
            <button class="btn-pesquisar" ng-click="copySearch()" title="Pesquisar"><i class="material-icons">search</i></button>
            <a href="~/KnowledgeArea/Form" class="btnPadrao pull-right"> Adicionar área de conhecimento</a>
        </form>
        <br />
        <table class="table table-hover" ng-show="knowledgeAreaList != null">
            <colgroup>
                <col width="6%" />
                <col width="90%" />
                <col width="2%" />
                <col width="2%" />
            </colgroup>
            <thead>
                <tr>
                    <th>Cód.</th>
                    <th>Descrição da área</th>
                    <th>Editar</th>
                    <th>Excluir</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="pesquisado in knowledgeAreaList">
                    <td>{{pesquisado.Id}}</td>
                    <td>{{pesquisado.Description}}</td>
                    <td class="center"><a type="button" class="material-icons" ng-click="edit(pesquisado)">edite</a></td>
                    <td class="center"><a ng-click="confirmar(pesquisado)"><i class="material-icons">delete</i></a></td>
                </tr>
            </tbody>
        </table>
        <page method="load()" total-pages="{{pages}}" total-itens="{{totalItens}}" page-size="pageSize" data-arr-page-size="[10,20,30,40,50,100]"></page>
        <p class="nresultados" ng-hide="knowledgeAreaList != null || !(message)">Nenhum resultado encontrado.</p>
    </div>
    @* Modal *@
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{{knowledgeArea.Description}}</h4>
                </div>
                <div class="modal-body">
                    <span>Você tem certeza que deseja excluir a área de conhecimento <b>{{knowledgeArea.Description}}</b>?</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnPadrao" ng-click="delete(knowledgeArea)">Excluir</button>
                    <button type="button" class="btnCancelar2" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>