@* Alertas *@
<alert></alert>
<div class="wellCustom" data-ng-controller="PageConfigurationListController">
    <div class="headerCustom">
        <h4>Configuração da página inicial<span>Listagem</span></h4>
    </div>
    <div class="well well-large">
        <div class="container-fluid">
            <form class="row-fluid">
                <div class="col-md-8 form-inline-page">
                    <input type="text" class="form-pesquisa" placeholder="Categoria" ng-model="pesquisaCat">
                    <input type="text" class="form-pesquisa" placeholder="Título" ng-model="pesquisa">
                    <button class="btn-pesquisar" ng-click="copySearch()" title="Pesquisar"><i class="material-icons">search</i></button>
                </div>
                <div class="col-md-4">
                    <a href="~/PageConfiguration/Form" class="btnPadrao pull-right"> Adicionar configuração de página</a>
                </div>
            </form>
        </div>
        <br />
        <table class="table table-hover" ng-show="pageConfigurationList != null">
            <colgroup>
                <col width="6%" />
                <col width="27%" />
                <col width="30%" />
                <col width="30%" />
                <col width="3%" />
                <col width="2%" />
                <col width="2%" />
            </colgroup>
            <thead>
                <tr>
                    <th>Cód.</th>
                    <th>Categoria da configuração da página</th>
                    <th>Título da configuração da página</th>
                    <th>Descrição da configuração da página</th>
                    <th>Destaque</th>
                    <th>Editar</th>
                    <th>Excluir</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="pesquisado in pageConfigurationList">
                    <td>{{pesquisado.Id}}</td>        
                    <td>{{pesquisado.CategoryDescription}}</td>
                    <td>{{pesquisado.Title}}</td>
                    <td>{{pesquisado.Description}}</td>
                    <td>{{pesquisado.MostrarDestaque ? (pesquisado.Destaque ? "Sim" : "Não") : "" }}</td>
                    <td class="center"><a type="button" class="material-icons" ng-click="edit(pesquisado)">edite</a></td>
                    <td class="center"><a ng-click="confirmar(pesquisado)"><i class="material-icons">delete</i></a></td>
                </tr>
            </tbody>
        </table>
        <page method="load()" total-pages="{{pages}}" total-itens="{{totalItens}}" page-size="pageSize" data-arr-page-size="[10,20,30,40,50,100]"></page>
        <p class="nresultados" ng-hide="pageConfigurationList != null || !(message)">Nenhum resultado encontrado.</p>
    </div>
    @* Modal *@
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{{pageConfiguration.Description}}</h4>
                </div>
                <div class="modal-body">
                    <span>Você tem certeza que deseja excluir a configuração da página inicial <b>{{pageConfiguration.Description}}</b>?</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btnPadrao" ng-click="delete(pageConfiguration)">Excluir</button>
                    <button type="button" class="btnCancelar2" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>
